@page
@model src.Areas.Profile.Pages.Tabs.ProfielModel
@{
    ViewData["Title"] = "Profiel";
    Layout = "~/Areas/Profile/Pages/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="card">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProfileViewModel.ID" />
                <div class="form-group">
                    <label asp-for="ProfileViewModel.FirstName" class="control-label"></label>
                    <input asp-for="ProfileViewModel.FirstName" class="form-control" />
                    <span asp-validation-for="ProfileViewModel.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfileViewModel.LastName" class="control-label"></label>
                    <input asp-for="ProfileViewModel.LastName" class="form-control" />
                    <span asp-validation-for="ProfileViewModel.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfileViewModel.EmailAddress" class="control-label"></label>
                    <input asp-for="ProfileViewModel.EmailAddress" class="form-control" />
                    <span asp-validation-for="ProfileViewModel.EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfileViewModel.PhoneNumber" class="control-label"></label>
                    <input asp-for="ProfileViewModel.PhoneNumber" class="form-control" />
                    <span asp-validation-for="ProfileViewModel.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfileViewModel.Password" class="control-label"></label>
                    <input asp-for="ProfileViewModel.Password" class="form-control" />
                    <span asp-validation-for="ProfileViewModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="Save" />
                    <input type="submit" value="Delete Account" class="btn btn-danger" asp-page-handler="Delete" />
                </div>
            </form>
        </div>
    </div>
</div>