<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    @{    
    Layout = "/Views/Shared/_Layout.cshtml";    
}    
<div class="m-5">    
    <div class="col-md-6  offset-md-3">    
            
            <div class="">    
                <ul class="nav nav-tabs card-header-tabs">    
                    <li class="nav-item">    
    
                        <a class="nav-link" href="/Profile/Tabs/Profiel">Mijn Profiel</a>    
                    </li>    
                    <li class="nav-item">    
    
                        <a class="nav-link" href="/Profile/Tabs/Chat">Chat</a>    
                    </li>
                    <li class="nav-item">    
    
                        <a class="nav-link" href="/Profile/Tabs/Specialist">Specialisten</a>    
                    </li>
                    <li class="nav-item">    
    
                        <a class="nav-link" href="/Profile/Tabs/Aanmelden">Aanmelden</a>    
                    </li>
                    <li class="nav-item">    
    
                        <a class="nav-link" href="/Profile/Tabs/Instellingen">Manage Gegevens</a>    
                    </li>
                </ul>    
            </div>    
            <div class="card-content">    
    
                <div class="row mt-5">    
                    <div class="col-md-12 ">    
                        @RenderBody()    
                    </div>    
                </div>    
            </div>    
    
    </div>    
</div>    
@section Scripts{    
    
    @RenderSection("Scripts", required: false)    
    <script>    
        $(function () {    
    
            var current = location.pathname;    
            $('.nav-tabs li a').each(function () {    
                var $this = $(this);    
                if (current.indexOf($this.attr('href')) !== -1) {    
                    $this.addClass('active');    
                }    
            })    
        })    
    </script>    
}    
</body>
</html>
