@model Chat
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRoom">
            <label asp-for="Naam">De naam van de groep
                <input asp-for="Naam" type="text" minlength="5" maxlength="25"/>
            </label>

            <label asp-for="Beschrijving">Geef een beschrijving van de groep
                <input asp-for="Beschrijving" type="text" minlength="25" maxlength="250"/>
            </label>
            <label asp-for="Onderwerp">Selecteer een Onderwerp
                <select asp-for="Onderwerp" type="text">
                    <option value="School">School</option>
                    <option value="Depressief">Depressief</option>
                    <option value="Slaaptekort">Slaaptekort</option>
                    <option value="ADD">ADD</option>
                    <option value="ADHD">ADHD</option>
                    <option value="Traumas">Traumas</option>
                    <option value="Autisme">Autisme</option>
                </select>
            </label>
            
            <input type="submit" value="maak nieuwe groep aan">
</form>
    </div>
</div>