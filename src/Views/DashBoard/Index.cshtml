    @{
    ViewData["Title"] = "Dashboard";
}
    @model List<Chat>
        <div class="container text-center">
        <h1 class="text-center pt-2">Welkom in de Chat!</h1>    
        <img src="~/img/balloons.jpg" class="waas img-fluid" aria-label="Chatballonnen">

        <h2>Wat wilt u doen?</h2>
        <div class="row">
            <div class="mx-auto">
            <a class="main-knop btn btn-outline-primary" asp-action="GroepToevoegen" aria-label="Een groep toevoegen aan uw lijst"> Groep toevoegen</a>
            @if((bool)ViewData["IsModerator"]){
            <a class="main-knop btn btn-outline-primary" asp-action="MaakZelfhulpgroep" aria-label="Maak een nieuwe groep aan"> Groep aanmaken</a>
            <a class="main-knop btn btn-outline-primary" asp-controller="Client" asp-action="Index" aria-label="Chats met Clienten">Chats met Clienten</a>
            }else{
            @if((bool)ViewData["HeeftPriveChat"]){
            <a class="main-knop btn btn-outline-primary" asp-action="GaNaarPriveChat" aria-label="Ga naar de chat met jouw pedagoog">Chat met pedagoog</a>
            }
            <button class="main-knop btn btn-outline-primary">Praat annoniem</button>
            }
        </div>
        </div>
        <div class="row">
            <div class="mx-auto">
            <a class="main-knop btn btn-primary" asp-action="Index" asp-route-Onderwerp ="School">School</a>
            <a class="main-knop btn btn-secondary" asp-action="Index" asp-route-Onderwerp ="Depressief">Depressief</a>
            <a class="main-knop btn btn-success" asp-action="Index" asp-route-Onderwerp ="Slaaptekort">Slaaptekort</a>
            <a class="main-knop btn btn-danger" asp-action="Index" asp-route-Onderwerp ="ADD">ADD</a>
            <a class="main-knop btn btn-warning" asp-action="Index" asp-route-Onderwerp ="ADHD">ADHD</a>
            <a class="main-knop btn btn-info" asp-action="Index" asp-route-Onderwerp ="Traumas">Traumas</a>
            <a class="main-knop btn btn-dark" asp-action="Index" asp-route-Onderwerp ="Autisme">Autisme</a>
            </div>
        </div>


    <h3>Mijn chatgroepen</h3>
        <partial name="_ZelfhulpgroepenPartial" model=@Model/> 
</div>
